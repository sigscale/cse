[Unit]
Description=SigScale CSE
Documentation="https://github.com/sigscale/cse"
After=epmd.service epmd.socket

[Service]
User=otp
Group=otp
WorkingDirectory=/home/otp
RuntimeDirectory=cse
RuntimeDirectoryMode=0750
LimitNOFILE=4096
EnvironmentFile=/etc/default/cse
Environment="START_ERL=ERL_LIBS=lib exec ${ROOTDIR}/bin/start_erl ${ROOTDIR} ${RELDIR} ${START_ERL_DATA} -boot_var OTPHOME . +K true +A 32 +Bi -sname ${NODENAME}"
ExecStart=@ERLANG_ROOT_DIR@/bin/run_erl -daemon /run/cse/ log ${START_ERL}
GuessMainPID=no
Type=forking
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
