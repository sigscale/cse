{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "http://sigscale.org/schema/ECS_user.json",
	"title": "Elastic Common Schema (ECS) User",
	"description": "The user fields describe information about the user that is relevant to the event.",
	"type": "object",
	"properties": {
		"id": {
			"description": "Unique identifier of the user.",
			"type": "string",
			"examples": [
				"id": "msisdn-62168902651",
				"imsi-0010019609545793"
			]
		},
		"name": {
			"description": "Short name or login of the user.",
			"type": "string",
			"examples": [
				"62168902651"
			]
		},
		"email": {
			"description": "User email address.",
			"type": "string",
			"format": "email",
			"examples": [
				"bob@example.net"
			]
		},
		"domain": {
			"description": "Name of the directory the user is a member of.",
			"type": "string",
			"format": "hostname",
			"examples": [
				"example.net"
			]
		}
	}
}
